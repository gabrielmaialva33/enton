# .env.example - Configuração do Enton

# Provedores de IA (Local First)
BRAIN_PROVIDER=local
TTS_PROVIDER=local
STT_PROVIDER=local

# Câmera (RTSP ou Index)
CAMERA_SOURCE=0
CAMERA_IP=192.168.1.100  # Exemplo
CAMERA_RTSP_PORT=554
CAMERA_RTSP_PATH=/live/ch0

# Armazenamento (BlobStore)
# Caminho absoluto para o HD externo. Deixe vazio para usar fallback (~/.enton/blobs)
BLOB_STORE_ROOT=/media/seu-usuario/Memory Dump/enton
BLOB_STORE_FALLBACK=~/.enton/blobs

# Caminhos de Sistema
FRAMES_DIR=~/.enton/frames
SKILLS_DIR=~/.enton/skills

# Senhas e Chaves (Opcionais)
GROQ_API_KEY=
OPENROUTER_API_KEY=
NVIDIA_API_KEYS=
HUGGINGFACE_TOKEN=
GOOGLE_PROJECT=

# Banco de Dados e Serviços
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379
TIMESCALE_DSN=postgresql://enton:enton@localhost:5432/enton

# Comportamento
BRAIN_TIMEOUT=30.0
IDLE_TIMEOUT=30.0
REACTION_COOLDOWN=5.0
